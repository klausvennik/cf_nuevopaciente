<div class="row col-md-7 col-xs-11 mx-auto">  
  <%= form_with(model: student) do |form| %>
    <% if student.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>
        <ul>
          <% student.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row col-md-7 col-xs-11 mx-auto my-3">
      <h3><%= t(:student_info) %></h3>
    </div>
    <table class="table">
      <script type="text/javascript">
        Regionv = "<%= @student.region %>";
        Communev = "<%= @student.commune %>";        
      </script>

      <tbody>
        <tr>    
          <td><%= form.label 'Nombre', class:"form-label" %></td>
          <td><%= form.text_field :name, class:"form-control" %></td>
        </tr>

        <tr>
          <td><%= form.label 'Apellido', style: "display: block" %></td>
          <td><%= form.text_field :lastname, class:"form-control" %></td>
        </tr>       
        <tr>           
          <td><%= form.label 'Carrera', style: "display: block" %></td>
          <td><select id="career" name="student[career]" class="form-control">
                <option value=<%= @student.career %>><%= @student.career %></option>
                <option value="Enfermería">Enfermería</option>
                <option value="Fonoaudiología">Fonoaudiología</option>
                <option value="Kinesiología">Kinesiología</option>
                <option value="Medicina">Medicina</option>
                <option value="Nutrición y Dietética">Nutrición y Dietética</option>
                <option value="Obstetricia y Puericultura">Obstetricia y Puericultura</option>
                <option value="Odontología">Odontología</option>
                <option value="Psicología">Psicología</option>
                <option value="Tecnología Médica">Tecnología Médica</option>
                <option value="Otra">Otra</option>
               </select>
          </td>          
        </tr>


          <tr>           
          <td><%= form.label 'Grado', style: "display: block" %></td>
          <td><select id="year" name="student[year]" class="form-control">
                <option value="1">Estudiante de Pregrado</option>
                <option value="2">Estudiante de Postgrado</option>
             </select>
          </td>          
        </tr>
          
          <td><%= form.label 'Teléfono', style: "display: block" %></td>
          <td class="row"><div class="col-1 my-2">+56</div><div class="col-11"><%= form.text_field :phono, class:"form-control col-7" %></div></td>
        </tr>
      </tbody>    
    </table>
    <div class="row col-md-7 col-xs-11 mx-auto my-3">
      <h3><%= t(:university_info) %></h3>
    </div>
    <table class="table"> 
      <tbody>
        <tr>
          <td><%= form.label 'Universidad', style: "display: block" %></td>
          <td><%= form.text_field :university, class:"form-control" %></td>
        </tr>
        <tr>
          <td><%= form.label 'Región', style: "display: block" %></td>      
          <td><select id="region" name="student[region]" class="form-control my-2">                
              </select>
          </td>
        </tr>
        <tr>
          <td><%= form.label t(:commune), style: "display: block" %></td>      
          <td><select id="commune" name="student[commune]" class="form-control my-2">                
              </select>
          </td>
        </tr>
      
      </tbody>    
    </table>
      <%= form.hidden_field :state, :value => '1' %>         
      <%= form.submit t(:save_changes), class:"btn btn-success my-3" %>
    </div>
  <% end %>
</div>

