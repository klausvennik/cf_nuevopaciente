<div class="row col-12">
  <div class="col-md-7 col-xs-11 mx-auto">
    <h2><%= t(:sign_up) %></h2>
  </div>
  <div class="col-md-7 col-xs-11 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "students/shared/error_messages", resource: resource %>

      <div class="col-md-6 my-2">
        <%= t(:email) %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

      <div class="col-md-6 my-2">
        <%= t(:password) %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t(:characters_minimum) %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
      </div>

      <div class="col-md-6 my-2">
        <%= t(:password_confirmation) %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(:sign_up), class:"btn btn-success m-2" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-7 col-xs-11 mx-auto">  
    <%= render "students/shared/links" %>
  </div>
</div>
